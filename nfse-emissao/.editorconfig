# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Configurações globais para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Configurações para arquivos TypeScript/JavaScript
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
quote_type = single

# Configurações para arquivos JSON
[*.json]
indent_style = space
indent_size = 2

# Configurações para arquivos Markdown
[*.md]
trim_trailing_whitespace = false

# Configurações para arquivos YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2
